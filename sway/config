### Variables
set $mod Mod4

set $term wezterm

set $left h
set $down j
set $up k
set $right l

include /etc/sway/config-vars.d/*
include /etc/sway/config.d/*

font pango:monospace 8
gaps inner 6
gaps outer 6
smart_gaps off
default_border pixel 3
default_floating_border normal
hide_edge_borders smart

floating_modifier $mod normal

include ./color
include ./displays
include ./rules
include ./workspaces
include ./binds/*

xwayland enable

exec swaync
exec waybar
exec nm-applet
exec gnome-keyring-daemon
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store
exec kanshi
exec eww-setup

exec $HOME/.local/bin/wallpaper

input type:keyboard {
    xkb_layout us(alt-intl)
}

