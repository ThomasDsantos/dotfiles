### Variables
set $mod Mod4

set $term wezterm

set $left h
set $down j
set $up k
set $right l

set $sc ~/.config/sway/scripts

include /etc/sway/config-vars.d/*
include /etc/sway/config.d/*

font pango:monospace 8
gaps inner 6
gaps outer 6
smart_gaps off
default_border pixel 3
default_floating_border normal
hide_edge_borders smart
set $clear #ffffff00

# class                  border   background  text     indicator  child_border
client.focused_inactive  #333333  #5f676a     #ffffff  #484e50    #ffffff00
client.unfocused         #333333  #222222     #888888  #292d2e    #ffffff00

floating_modifier $mod normal

include ./theme
include ./displays
include ./rules
include ./workspaces
include ./binds/*

xwayland enable

exec {
  swaync

  nm-applet
  blueman-applet

  gnome-keyring-daemon
  wl-paste --type text --watch cliphist store
  wl-paste --type image --watch cliphist store
  $HOME/.local/bin/wallpaper set
  swayidle -w
}

exec_always {
  pkill kanshi; exec kanshi
  eww-setup
}

input type:keyboard {
    xkb_layout us(alt-intl)
}

